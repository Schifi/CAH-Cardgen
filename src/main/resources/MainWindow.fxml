<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="108.0" prefWidth="313.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.schifi.cahcardgen.ui.MainWindowController">
   <children>
      <Button fx:id="buttonFileChooser" layoutX="33.0" layoutY="34.0" mnemonicParsing="false" onAction="#openFileChooser" text="Choose input file" />
      <Button fx:id="buttonStartGenerating" disable="true" layoutX="169.0" layoutY="34.0" mnemonicParsing="false" onAction="#generateImages" text="Start generating" />
      <RadioButton fx:id="toggleWhite" layoutX="33.0" layoutY="112.0" mnemonicParsing="false" selected="true" text="White Cards">
         <toggleGroup>
            <ToggleGroup fx:id="cardType" />
         </toggleGroup></RadioButton>
      <RadioButton fx:id="toggleBlack" layoutX="33.0" layoutY="139.0" mnemonicParsing="false" text="Black Cards" toggleGroup="$cardType" />
      <CheckBox fx:id="checkBoxDeckname" layoutX="182.0" layoutY="112.0" mnemonicParsing="false" text="Add Deckname" onAction="#toggleDeckname"/>
      <Separator layoutX="-2.0" layoutY="90.0" prefHeight="0.0" prefWidth="315.0" />
      <Separator layoutX="154.0" layoutY="91.0" orientation="VERTICAL" prefHeight="96.0" prefWidth="0.0" />
      <TextField fx:id="textFieldDeckname" disable="true" layoutX="169.0" layoutY="144.0" prefHeight="25.0" prefWidth="134.0" />
   </children>
</AnchorPane>
